<?xml version="1.0" encoding="utf-8"?>
<com.avene.avene.livina.widget.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:contentDescription="album image"
        android:src="@drawable/im_dft_album"
        android:background="@color/highlighted_text_material_dark"/>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/album_title_background"
        />
    
    <TextView
        android:id="@+id/album_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="start|center_vertical"
        android:text="Album artist"
        android:textColor="@android:color/white"/>
    
    <TextView
        android:id="@+id/album_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/album_artist"
        android:gravity="start|center_vertical"
        android:text="Album title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingTop="5dp"
        android:textColor="@android:color/white"/>

</com.avene.avene.livina.widget.SquareFrameLayout>