<resources>

    <!-- Base application theme. -->
    <style name="Livina" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:textColorPrimary">@color/light_ash</item>-->
        <!--<item name="android:textColorSecondary">@color/dark_ash</item>-->
        <item name="android:textColor">@color/dark_charcoal</item>
        <item name="android:textColorPrimary">@color/dark_charcoal</item>
        <item name="android:textColorSecondary">@color/dark_charcoal</item>
        <item name="android:windowBackground">@color/light_ash</item>

        <item name="switchStyle">@style/Livina.switchStyle</item>

    </style>

    <style name="Livina.containerStyle" parent="@style/Livina">
        <item name="android:background">@color/light_ash</item>
        <item name="android:color">@color/dark_charcoal</item>
        <item name="android:textColorPrimary">@color/dark_charcoal</item>
        <item name="android:textColorSecondary">@color/dark_charcoal</item>

    </style>

    <style name="Livina.switchStyle" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="android:textColor">@color/dark_charcoal</item>
        <item name="android:textColorPrimary">@color/dark_charcoal</item>
        <item name="android:textColorSecondary">@color/dark_charcoal</item>

    </style>
    
</resources>
